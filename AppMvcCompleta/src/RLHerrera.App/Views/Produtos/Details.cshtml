@model RLHerrera.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Detalhe do produto" + Model.Nome;
}

<h1>Details</h1>

<div>
    <h4 style="padding-top: 50px">@ViewData["Title"]</h4>
    <hr />
    <div class="col-md-4">
        <img src="~/imagens/@Model.Imagem" alt="@Model.Imagem" style="width:300px; height:428px" />
    </div>

    <div class="col-md-8">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FornecedorId)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayFor(model => model.Fornecedor.Nome)
            </dt>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>

            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valor)
            </dt>
            <dd class="col-sm-10">
                @Model.Valor.ToString("C");
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DataCadastro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataCadastro)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Ativo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Ativo)
            </dd>

        </dl>
    </div>
</div>
<div>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id"><span class="fa fa-pencil-alt"></span></a>
    <a class="btn btn-info" href="javascript:window.history.back();"><span class="fa fa-arrow-left"></span></a>
</div>
